---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Discover tech companies in Uppsala" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="pop-art-header">
      <div class="header-content">
        <h1>
          <a href="/">{title}</a>
        </h1>
      </div>
    </header>
    <div class="container">
      <main>
        <slot />
      </main>
      <footer>
        © {new Date().getFullYear()}, Built by <a href="https://twitter.com/johannesl">Johannes</a> at <a href="https://46elks.com">46elks</a> and <a href="https://andersaberg.com">Anders Åberg</a>.
      </footer>
    </div>
  </body>
</html>

<style>
  :global(body) {
    margin: 0;
  }

  header {
    background: linear-gradient(135deg, #ff0055 0%, #ff6b00 100%);
    margin-bottom: 1.45rem;
    position: relative;
    overflow: hidden;
    border-bottom: 8px solid #000;
  }

  /* Ben-Day dots pattern */
  header::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(circle, rgba(255,255,255,0.3) 1.5px, transparent 1.5px);
    background-size: 12px 12px;
    pointer-events: none;
  }

  .header-content {
    margin: 0 auto;
    max-width: 1400px;
    padding: 2rem 1.0875rem;
    text-align: center;
  }

  header h1 {
    margin: 0;
    position: relative;
    z-index: 1;
  }

  header a {
    color: #ffff00;
    text-decoration: none;
    font-family: 'Impact', 'Arial Black', sans-serif;
    font-size: 2.5rem;
    text-transform: uppercase;
    text-shadow:
      4px 4px 0 #000,
      6px 6px 0 rgba(0, 0, 0, 0.3);
    letter-spacing: 2px;
    display: inline-block;
    animation: header-pop 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  @keyframes header-pop {
    0% {
      transform: scale(0.5) rotate(-10deg);
      opacity: 0;
    }
    60% {
      transform: scale(1.05) rotate(2deg);
    }
    100% {
      transform: scale(1) rotate(0deg);
      opacity: 1;
    }
  }

  header a:hover {
    animation: header-glow 1s ease-in-out infinite;
  }

  @keyframes header-glow {
    0%, 100% {
      text-shadow:
        4px 4px 0 #000,
        6px 6px 0 rgba(0, 0, 0, 0.3);
    }
    50% {
      text-shadow:
        4px 4px 0 #000,
        6px 6px 0 rgba(0, 0, 0, 0.3),
        0 0 20px #ffff00;
    }
  }

  .container {
    margin: 0 auto;
    max-width: 1400px;
    padding: 0 2rem 1.45rem;
  }

  footer {
    margin-top: 100px;
  }
</style>
