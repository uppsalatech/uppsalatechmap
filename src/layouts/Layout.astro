---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Discover tech companies in Uppsala" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div class="header-content">
        <h1>
          <a href="/">{title}</a>
        </h1>
      </div>
    </header>
    <div class="container">
      <main>
        <slot />
      </main>
      <footer>
        Â© {new Date().getFullYear()}, Built by <a href="https://twitter.com/johannesl">Johannes</a> at <a href="https://46elks.com">46elks</a> and <a href="https://twitter.com/andersaberg">Anders</a> at <a href="https://www.caspeco.se">Caspeco</a>
      </footer>
    </div>
  </body>
</html>

<style>
  :global(body) {
    margin: 0;
  }

  header {
    background-color: #a4508b;
    background-image: linear-gradient(326deg, #a4508b 0%, #5f0a87 74%);
    margin-bottom: 1.45rem;
  }

  .header-content {
    margin: 0 auto;
    max-width: 960px;
    padding: 1.45rem 1.0875rem;
  }

  header h1 {
    margin: 0;
  }

  header a {
    color: white;
    text-decoration: none;
    font-family: 'Bungee Shade', sans-serif;
  }

  .container {
    margin: 0 auto;
    max-width: 960px;
    padding: 0 1.0875rem 1.45rem;
  }

  footer {
    margin-top: 100px;
  }
</style>
